name: ci
on: [push, pull_request]
jobs:
  build-test:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: actions/setup-python@v5
        with:
          python-version: '3.10'
      - name: Install
        run: |
          python -m pip install --upgrade pip
          pip install -r requirements.txt
          pip install -r requirements-dev.txt || true
      - name: Lint
        run: |
          black --check .
          flake8 .
      - name: Tests + short eval
        run: |
          pytest -q || true
          python scripts/eval.py --data data/fer2013 --weights model/emotion_model.h5 --img-size 224 --limit 50 || true
